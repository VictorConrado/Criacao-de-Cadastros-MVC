@model ContatoModel 
@{
    ViewData["Title"] = "Confirmar Apagar";
}
<div class="text-center">
    <br />
    <h3>Deseja mesmo apagar o contato @Model.Name ?</h3>
    <br />
<div class="d-grid gap-2 col-6 mx-auto">
        <a type="submit" class="btn btn-success" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button"> Confirmar exclusão</a>
        <a type="submit" class="btn btn-danger" asp-controller="Contato" asp-action="Index"  role="button">Cancelar exclusão</a>
       
        
</div>

